<!DOCTYPE html>
<!-- Website template by freewebsitetemplates.com -->
<html>
<head>
	<meta charset="UTF-8">
	<title>News - Travlr Getaways Website Template</title>
	<link rel="stylesheet" href="css/style.css" type="text/css">
</head>
<body>
	<div id="background">
		<div id="page">
			{{> header }}
			<div id="contents">
				<div class="box">
					<div>
						<div id="news" class="body">
							<div class="sidebar">
			{{#each sidebar}}
								<h3>{{title}}</h3>
								<ul>
				{{#each subcontent}}
									<li>
										<a href="/news">{{this}}</a>
									</li>
				{{/each}}
								</ul> 				
			{{/each}}
							</div>
							<div>
								<h1>News</h1>
			{{#each content}}
								<img src="images/{{image}}" alt="Img">
								<h2>{{title}}</h2>
								<span class="time">{{date}}<br> by: {{author}}</span>
								{{{description}}}
			{{/each}}
							</div>
						</div>
					</div>
				</div>
			</div>
			{{> footer }}
		</div>
	</div>
</body>
</html>